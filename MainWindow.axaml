        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="c_sharp.MainWindow"
        Title="c_sharp">

    <StackPanel>
        <TextBox Name="BaseInput" Watermark="Enter the base"/>
        <TextBox Name="HeightInput" Watermark="Enter the height"/>
