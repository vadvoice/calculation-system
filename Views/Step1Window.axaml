<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="c_sharp.Views.Step1Window"
        Title="Step 1 - Formula Configuration"
        Width="400" Height="300">
    <StackPanel Margin="20">
        <TextBlock Text="Step 1: Select Formula and Parameters" FontSize="20" Margin="0,0,0,20"/>
        
        <ComboBox Name="FormulaComboBox" 
                  Width="200" 
                  Margin="0,10"
                  PlaceholderText="Select Formula">
            <ComboBoxItem>Square Function</ComboBoxItem>
            <ComboBoxItem>Cubic Function</ComboBoxItem>
            <ComboBoxItem>Exponential Function</ComboBoxItem>
        </ComboBox>

        <NumericUpDown Name="ParametersInput"
                      Minimum="1"
                      Maximum="10"
                      Value="1"
                      Margin="0,10"
                      Watermark="Number of Parameters"/>

        <Button Content="Next" 
                Click="OnNextClick"
                HorizontalAlignment="Right" 
                Margin="0,20,0,0"/>
    </StackPanel>
</Window> 