<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="c_sharp.Views.Step2Window"
        Title="Step 2 - Algorithm Configuration"
        Width="400" Height="300">
    <StackPanel Margin="20">
        <TextBlock Text="Step 2: Algorithm Configuration" FontSize="20" Margin="0,0,0,20"/>
        
        <ComboBox Name="AlgorithmComboBox" 
                  Width="200" 
                  Margin="0,10"
                  PlaceholderText="Select Algorithm">
            <ComboBoxItem>Monte Carlo</ComboBoxItem>
            <ComboBoxItem>Genetic Algorithm</ComboBoxItem>
            <ComboBoxItem>Simulated Annealing</ComboBoxItem>
        </ComboBox>

        <NumericUpDown Name="PointsInput"
                      Minimum="1"
                      Maximum="1000"
                      Value="100"
                      Margin="0,10"
                      Watermark="Number of Points"/>

        <NumericUpDown Name="MinNumberInput"
                      Minimum="0"
                      Maximum="100"
                      Value="1"
                      Margin="0,10"
                      Watermark="Minimum Number"/>

        <Button Content="Next" 
                Click="OnNextClick"
                HorizontalAlignment="Right" 
                Margin="0,20,0,0"/>
    </StackPanel>
</Window> 