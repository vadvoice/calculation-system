<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="c_sharp.Views.Step3Window"
        Title="Step 3 - Configuration Summary"
        Width="700" Height="600">
    <StackPanel Margin="20">
        <TextBlock Text="Step 3: Показники ефективності" FontSize="20" Margin="0,0,0,20"/>
        
        <TextBlock Name="SummaryText" TextWrapping="Wrap" Margin="0,0,0,20"/>

        <Button Content="Start Calculation" 
                Click="OnStartClick"
                HorizontalAlignment="Right" 
                Margin="0,20,0,0"/>
    </StackPanel>
</Window> 